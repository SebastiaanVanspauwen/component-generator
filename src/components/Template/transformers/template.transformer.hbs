import { Template } from '../models/template.model'

export interface TemplateType {
  uuid: string
}

export default class TemplateTransformer {
  static item (template: Template): TemplateType {
    return {
      uuid: template.uuid
    }
  }

  static array (templates: Template[]): TemplateType[] {
    return templates.map(template => this.item(template))
  }
}
