{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "declaration": true,
    "target": "esnext",
    "module": "commonjs",
    "types": [
      "node"
    ],
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "paths": {
      "*": [
        "./types/*.d.ts"
      ]
    }
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "**/node_modules",
    "**/.*/",
    "src/helpers/dto.ts"
  ]
}
